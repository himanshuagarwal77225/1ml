<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/parentRelative"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
   android:layout_margin="8dp"
    android:background="@drawable/border"
    >
    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test name"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/accreditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/By_thyrocare"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/fasting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum 12 hours fasting is manadatory"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report: Daily"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 720"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/strike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_strike_1"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical">

                <TextView
                    android:layout_gravity="end|top"
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/discountshape40"
                    android:gravity="center"
                    android:text="20%\n OFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="bottom"

              android:gravity="bottom|end">
            <ImageView
                android:id="@+id/cart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />
          </RelativeLayout>
        </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>