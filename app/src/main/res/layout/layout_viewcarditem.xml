<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="6dp"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">
        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/img_most_booked1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/disc_most_booked1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discountshape"
                android:gravity="center"
                android:layout_alignEnd="@id/img_most_booked1"
                android:text="20% \n OFF"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="#447e7e7e" />
        <TextView
            android:id="@+id/txt_most_booked1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAROGYAM 1.8"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:padding="4dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">
            <TextView
                android:id="@+id/no_test_most_booked1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35 tests"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/price_most_booked1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 720"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/strike_price_most_booked1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_strike_1"
                android:textSize="14sp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>
        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="ADD"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@color/colorAccent"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
