<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallPadding11"
        card_view:cardCornerRadius="4.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lin_address_ItemMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_gravity="center"
                    android:id="@+id/rb_selectAddRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mediumPadding" />
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/mediumPadding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/MediumTextSize"
                        android:textColor="@color/black"
                        android:id="@+id/tv_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="sefwefwevwevwevwevwevwevwevwevwevwevwevwevwevwevwevwevwevwev" android:maxLines="3" />
                    <TextView
                        android:textSize="@dimen/MediumTextSize"
                        android:textColor="@color/black"
                        android:id="@+id/tv_state_city"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Navi Mumbai, Maharashtra" />
                    <TextView
                        android:textSize="@dimen/MediumTextSize"
                        android:textColor="@color/black"
                        android:id="@+id/tv_pincode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="400706" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/lin_edit_del_address"
                android:padding="@dimen/smallPadding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btn_deladdress"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="35.0dip"
                    android:layout_marginEnd="8dp"
                    android:text="DELETE" />
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btn_editaddress"

                    android:background="@drawable/button_border"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_height="35.0dip"
                    android:text="EDIT" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>